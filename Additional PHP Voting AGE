<?php
if (isset($_POST['Submit'])) {
    $age = $_POST['age'];
    if ($age >= 18) {
        $message = "<b>You are eligible to vote</b>";
    } else {
        $message = "<b>You are not eligible to vote</b>";
    }
}
?>
