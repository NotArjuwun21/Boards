        <form method="POST" action="">
            <label for="age">Enter your age:</label><br>
            <input type="text" name="age" id="age"><br><br>
            <input type="submit" name="Submit" value="Check">
        </form>

        <?php
        if (isset($message)) {
            echo "<div class='result'>$message</div>";
